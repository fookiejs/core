{
    "$schema": "https://turbo.build/schema.v2.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "test": {
            "dependsOn": ["build"],
            "outputs": ["coverage/**"],
            "inputs": ["src/**/*.ts", "test/**/*.ts"]
        },
        "lint": {
            "outputs": [],
            "inputs": ["src/**/*.ts", "test/**/*.ts"]
        },
        "format": {
            "outputs": [],
            "inputs": ["src/**/*.ts", "test/**/*.ts"]
        },
        "test:watch": {
            "cache": false,
            "persistent": true
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "publish-packages": {
            "dependsOn": ["build", "test", "lint"],
            "outputs": []
        }
    }
}
