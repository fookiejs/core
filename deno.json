{
	"workspace": [
		"packages/core",
		"packages/graphql",
		"packages/cache",
		"packages/typeorm",
		"packages/auth"
	],

	"imports": {
		"@std/collections": "jsr:@std/collections@^1.0.10",
		"@std/expect": "jsr:@std/expect@^0.4.0",
		"@fookiejs/core": "./packages/core/mod.ts",
		"@fookiejs/cache": "./packages/cache/mod.ts",
		"class-transformer": "npm:class-transformer@^0.5.1",
		"moment": "npm:moment@^2.30.1",
		"reflect-metadata": "npm:reflect-metadata@^0.2.2",
		"uuid": "npm:uuid@^11.1.0",
		"lodash": "npm:lodash-es@^4.17.21"
	},
	"tasks": {
		"dev": "deno run --allow-net --allow-env --allow-read mod.ts",
		"test": "deno test --allow-net --allow-env --allow-read",
		"fix-imports": "deno run --allow-read --allow-write scripts/fix-imports.ts",
		"check": "deno check ./packages/**/*.ts",
		"lint": "deno lint ./packages/**/*.ts",
		"fmt": "deno fmt ./packages/**/*.ts"
	},
	"compilerOptions": {
		"strict": false,
		"noImplicitAny": false,
		"lib": ["deno.window", "deno.ns"]
	},
	"fmt": {
		"lineWidth": 120,
		"semiColons": false,
		"singleQuote": false,
		"useTabs": true
	},
	"lint": {
		"include": ["packages/**/*.ts"],
		"rules": {
			"tags": ["recommended"],
			"exclude": [
				"no-explicit-any",
				"require-await",
				"no-slow-types",
				"no-this-alias"
			]
		}
	},
	"license": "MIT"
}
